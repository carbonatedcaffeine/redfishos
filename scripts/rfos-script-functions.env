srcfile() {
	local i srcfile=""
	if [ "${1:-}" != "" ]; then
		for i in "" .env; do
			srcfile="$(dirname $0)/$1$i"
			if [ ! -r "$srcfile" ]; then
				srcfile="/usr/bin/$1$i"
			fi
			test -r "$srcfile" && break
		done
	fi
	if [ ! -r "$srcfile" ]; then
		echo
		echo "ERROR: ${srcfile:-missing parameter, required .env filename}"\
" ${srcfile:+not found}, abort."
		echo
		return 1
	fi >&2
	source "$srcfile"
}
