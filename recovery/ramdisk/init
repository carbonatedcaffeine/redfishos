# release: 0.1.4

export PATH=/usr/bin:/usr/sbin:/bin:/sbin

LOCAL_IP="10.42.66.66"
LOCAL_BR="10.42.66.255"

USB_IP="192.168.2.15"
USB_BR="192.168.2.255"

pause() { usleep $((500000*${1:-1})); }

################################################################################

/sbin/busybox-static --install -s
/sbin/ldconfig

echo "Doing mount config and all..."
mount /dev
mkdir /dev/pts /dev/shm
mount -a
cat /proc/mounts >/etc/mtab
mount -t configfs none /config

powerkey-handler.sh start

yamui -a 1000 $(for i in $(seq 1 8); do echo rfos-anim-circles-16c-2x$i; done) &

print-banner.sh $LOCAL_IP >/dev/null &

for i in /sys/devices/system/cpu/cpu?/cpufreq/scaling_governor; do
     echo "conservative" >$i
done

#echo "Running mdev..."
#mdev -s -f
##echo /bin/mdev >/proc/sys/kernel/hotplug

echo "USB config setting..."
. /init.usb

pause 2 # RAF: just to test the animation

for i in $(seq 1 8); do
    dmesg | grep -q configfs-gadget && break
    pause
done

if dmesg | grep -q configfs-gadget; then
    echo "initrd: USB connection found at $i' attempt" > /dev/kmsg
    . /init.hr
else
    echo "initrd: USB connection NOT found, boot mode" > /dev/kmsg
    killall yamui && killall -9 yamui
##  echo >/proc/sys/kernel/hotplug
    umount /config
    . /init.hb
fi
